{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "description": "Centralized MCP configuration for eBay API MCP Server. Copy this file to mcp-setup.json and fill in your values.",
  "ebay": {
    "credentials": {
      "clientId": "YOUR_EBAY_CLIENT_ID",
      "clientSecret": "YOUR_EBAY_CLIENT_SECRET",
      "environment": "sandbox",
      "redirectUri": "https://your-app.com/callback"
    },
    "tokens": {
      "accessToken": "YOUR_USER_ACCESS_TOKEN_OPTIONAL",
      "refreshToken": "YOUR_USER_REFRESH_TOKEN_OPTIONAL",
      "clientToken": "YOUR_CLIENT_CREDENTIALS_TOKEN_OPTIONAL",
      "clientRefreshToken": "YOUR_CLIENT_REFRESH_TOKEN_OPTIONAL"
    }
  },
  "mcpServer": {
    "buildPath": "/absolute/path/to/ebay-api-mcp-server/build/index.js",
    "autoGenerateConfigs": true,
    "clients": {
      "claude": {
        "enabled": true,
        "configPath": "~/Library/Application Support/Claude/claude_desktop_config.json"
      },
      "cline": {
        "enabled": false,
        "configPath": "~/.config/cline/mcp_settings.json"
      },
      "continue": {
        "enabled": false,
        "configPath": "~/.continue/config.json"
      },
      "zed": {
        "enabled": false,
        "configPath": "~/.config/zed/settings.json"
      }
    }
  },
  "security": {
    "note": "This file contains sensitive credentials. Never commit to version control!",
    "gitignored": true,
    "recommendedPermissions": "600"
  }
}
