###############################################################################
# eBay API MCP Server - Environment Configuration
#
# Quick Start:
#   1. Copy this file: cp .env.example .env
#   2. Get credentials from: https://developer.ebay.com/my/keys
#   3. Fill in the 4 required values below
#   4. Run: npm install (auto-configures everything!)
#
# That's it! The server will auto-detect and configure all MCP clients.
###############################################################################

# ═══════════════════════════════════════════════════════════════════════════
# REQUIRED: eBay API Credentials
# ═══════════════════════════════════════════════════════════════════════════
# Get these from: https://developer.ebay.com/my/keys

EBAY_CLIENT_ID=your_ebay_client_id_here
EBAY_CLIENT_SECRET=your_ebay_client_secret_here

# Environment: "sandbox" (testing) or "production" (live eBay)
EBAY_ENVIRONMENT=sandbox

# Redirect URI (RuName): Get from eBay Developer Portal > User Tokens
# Required for user OAuth flow (10k-50k requests/day)
EBAY_REDIRECT_URI=your_runame_here

# ═══════════════════════════════════════════════════════════════════════════
# OPTIONAL: User OAuth Tokens (Recommended for high rate limits)
# ═══════════════════════════════════════════════════════════════════════════
# Benefits: 10,000-50,000 requests/day vs 1,000/day with app tokens
# How to get: Use ebay_get_oauth_url tool to generate authorization URL
# Leave blank to use app tokens (auto-generated, 1k req/day)

EBAY_USER_ACCESS_TOKEN=v^1.1#...
EBAY_USER_REFRESH_TOKEN=v^1.1#...

# ═══════════════════════════════════════════════════════════════════════════
# OPTIONAL: App OAuth Token (Auto-generated if not provided)
# ═══════════════════════════════════════════════════════════════════════════
# The server will automatically generate this using client credentials flow
# Only set this if you want to use a pre-generated app token

EBAY_APP_ACCESS_TOKEN=v^1.1#...

