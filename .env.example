# eBay API Credentials
EBAY_CLIENT_ID=your_ebay_client_id_here
EBAY_CLIENT_SECRET=your_ebay_client_secret_here
EBAY_ENVIRONMENT=sandbox
EBAY_REDIRECT_URI=https://your-app.com/callback

# MCP Server Configuration (HTTP mode only)
MCP_HOST=localhost
MCP_PORT=3000

# OAuth 2.1 Authorization Server Settings
# Set OAUTH_ENABLED=false to disable authorization (local development only)
OAUTH_ENABLED=true

# Authorization Server URL
# For Keycloak: http://localhost:8080/realms/master
# For other providers: update to your authorization server
OAUTH_AUTH_SERVER_URL=http://localhost:8080/realms/master

# OAuth Client Credentials (for token introspection)
# These are the MCP server's own credentials, NOT the eBay credentials
# Create a client in your authorization server for the MCP server
OAUTH_CLIENT_ID=mcp-server-client-id
OAUTH_CLIENT_SECRET=mcp-server-client-secret

# Required OAuth Scopes
# Comma-separated list of scopes required to access this MCP server
OAUTH_REQUIRED_SCOPES=mcp:tools,mcp:resources

# Token Verification Method
# true = Use token introspection endpoint (RFC 7662)
# false = Use JWT validation with JWKS (requires jwks_uri in server metadata)
OAUTH_USE_INTROSPECTION=true
